#
# Description: Adding basic metadata to GCP Cross Project Logs
# Vector Output Name: gcp_{{ project_id }}_project_logs_metadata
# Notes:
#
# +----------------------------------------------------------------------------------------+

type: "remap"
inputs:
  - "gcp_cross_project_logs_{{ project_id }}"
drop_on_abort: true
drop_on_error: true
reroute_dropped: true
source: |
  .metadata = {
      "cloud": {
          "account": {
              "id": "{{ project_id }}"
          },
          "availability_zone": string(.resource.labels.zone) ?? null,
          "environment": "gcp",
          "instance": {
              "id": string(.resource.labels.instance_id) ?? null,
              "name": string(.resource.labels.instance_name) ?? null
          },
          "project": {
              "id": "{{ project_id }}",
              "name": "{{ project_name }}"
          },
          "provider": "gcp",
          "region": string(.resource.labels.region) ?? string(.resource.labels.location) ?? string(.resource.labels.zone) ?? "global",
          "service": string(.resource.type) ?? null
      },
      "custom": {
          "cross_project": true,
          "gcp": {
              "log_name": .logName
          },
          "index": {
              "prefix": "{{ project_splunk_index_prefix }}",
              "default": "{{ project_default_splunk_index }}"
          }
      }
  }
  %metadata.firehose_only = true
  %metadata.message_set = false
