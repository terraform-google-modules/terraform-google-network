{
  "Version": "2012-10-17",
  "Statement": [
      {
        "Sid": "AllowEC2TagPermissions",
        "Effect": "Allow",
        "Action": [
          "ec2:DeleteTags",
          "ec2:DescribeTags",
          "ec2:CreateTags"
        ],
        "Resource": "*",
        "Condition": {
          "StringEquals": {
            "ec2:Region": "${ aws_region }"
          }
        }
      },
      {
        "Sid": "AllowEC2WritePermissions",
        "Effect": "Allow",
        "Action": [
            "ec2:DetachVolume",
            "ec2:AttachVolume",
            "ec2:ModifyVolume",
            "ec2:ImportVolume",
            "ec2:ModifyVolumeAttribute",
            "ec2:DescribeInstances",
            "ec2:DescribeVolumesModifications",
            "ec2:DescribeVolumeAttribute",
            "ec2:CreateVolume",
            "ec2:EnableVolumeIO",
            "ec2:DeleteVolume",
            "ec2:DescribeVolumeStatus",
            "ec2:DescribeVolumes"
        ],
        "Resource": "*",
        "Condition": {
          "StringEquals": {
            "ec2:Region": "${ aws_region }"
          }
        }
      }
  ]
}
