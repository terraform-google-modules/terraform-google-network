{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowMailRelaytoAuthorizedDomains",
            "Effect": "Allow",
            "Action": [
                "ses:SendEmail",
                "ses:SendRawEmail"
            ],
            "Resource": "*",
            "Condition": {
                "StringLike": {
                    "ses:FromAddress": ${jsonencode(ses_notifications_from_address_list)}
                },
                "ForAllValues:StringLike":{
                    "ses:Recipients": ${jsonencode(ses_notifications_recipients)}
                }
            }
        },
        {
            "Sid": "AllowMailRelayFromAlertsToInternal",
            "Effect": "Allow",
            "Action": [
                "ses:SendEmail",
                "ses:SendRawEmail"
            ],
            "Resource": "*",
            "Condition": {
                "StringLike": {
                    "ses:FromAddress": ${jsonencode(ses_alerts_from_address_list)}
                },
                "ForAllValues:StringLike":{
                    "ses:Recipients":${jsonencode(ses_alerts_recipients)}
                }
            }
        }
    ]
}
